{
  "$schema": "https://schema.management.azure.com/schemas/2019-08-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
      "workspaceName": {
          "type": "string"
      },
      "location": {
        "type": "string"
      }
  },
  "resources": [
    {
      "type": "Microsoft.OperationalInsights/workspaces",
      "apiVersion": "2017-03-15-preview",
      "name": "[parameters('workspaceName')]",
      "location": "[parameters('location')]",
      "resources": [
        {
          "type": "savedSearches",
          "apiVersion": "2020-08-01",
          "name": "imProcessCreation",
            "dependsOn": [
              "[concat('Microsoft.OperationalInsights/workspaces/', parameters('workspaceName'))]"
            ],
            "properties": {
              "etag": "*",
              "displayName": "combining all product parsers into one normalized process table - only process creation events ",
              "category": "Security",
              "FunctionAlias": "imProcessCreation",
              "query": "union isfuzzy=true vimProcessEmpty, vimProcessEventsMicrosft365D, vimProcessCreateMicrosftSysmon, vimProcessCreaetMicrosftSecurityEvents" ,
              "version": 1
          }
        }
      ]
    }
  ]
}