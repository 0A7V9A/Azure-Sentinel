{
  "$schema": "https://schema.management.azure.com/schemas/2019-08-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "workspaceName": {
      "type": "string"
    },
    "location": {
      "type": "string"
    }
  },
  "resources": [
    {
      "type": "Microsoft.OperationalInsights/workspaces",
      "apiVersion": "2017-03-15-preview",
      "name": "[parameters('workspaceName')]",
      "location": "[parameters('location')]",
      "resources": [
        {
          "type": "savedSearches",
          "apiVersion": "2020-08-01",
          "name": "imNetworkSessions",
          "dependsOn": [
            "[concat('Microsoft.OperationalInsights/workspaces/', parameters('workspaceName'))]"
          ],
          "properties": {
            "etag": "*",
            "displayName": "ASim Network Sessions",
            "category": "Security",
            "FunctionAlias": "imNetworkSessions",
            "query": "union isfuzzy=true\n  NetworkSessions\n  , vimNwSPaloAlto\n  , vimNwSCheckPointFirewall\n  , vimNwSZScaler\n  , vimNwSWireData\n  , vimNwSWindowsFirewall\n  , vimNwSCiscoASA\n  , vimNwSM365",
            "version": 1
          }
        }
      ]
    }
  ]
}