{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "keyVaultName": {
            "type": "String",
            "metadata": {
                "description": "The name of the key vault."
            }
        },
        "apiKey": {
            "type": "String",
            "metadata": {
                "description": "The API key value to store in the secret."
            }
        },
        "userName": {
            "type": "String",
            "metadata": {
                "description": "The user name value to store in the secret."
            }
        }
    },
    "variables": {
        "secretName": "AnomaliApiKey",
        "secretValueP1": "{'AuthenticationType': 'Static', 'Properties': {'apiKey': '<apiKey>', 'userName': '<userName>'}}",
        "secretValueP2": "[replace(variables('secretValueP1'),'<apiKey>',parameters('apiKey'))]",
        "secretValue": "[replace(variables('secretValueP2'),'<userName>',parameters('userName'))]"
    },
    "resources": [
        {
            "type": "Microsoft.KeyVault/vaults/secrets",
            "apiVersion": "2021-06-01-preview",
            "name": "[concat(parameters('keyVaultName'), '/', variables('secretName'))]",
            "location": "[resourceGroup().location]",
            "properties": {
                "value": "[variables('secretValue')]"
            }
        }
    ],
    "outputs": {}
}