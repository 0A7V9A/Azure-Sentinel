{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "Fortinet_Customconnector_Uri": {
      "type": "string",
      "metadata": {
        "description": "The Uri of the linked template for fortinet custom connector"
      }
    },
    "Fortinet_FunctionApp_URI": {
      "type": "string",
      "metadata": {
        "description": "The Uri of the linked template for fortinet function app"
      }
    },
    "Fortinet-ResponseOnIPUri": {
      "type": "string",
      "metadata": {
        "description": "The Uri of the linked template for playbook Fortinet-ResponseOnIP"
      }
    },
    "Fortinet-ResponseOnURLUri": {
      "type": "string",
      "metadata": {
        "description": "The Uri of the linked template for playbook Fortinet-ResponseOnURL"
      }
    },
    "Fortinet-EnrichonIPUri": {
      "type": "string",
      "metadata": {
        "description": "The Uri of the linked template for playbook Enrichment"
      }
    },
    "Service_EndPoint": {
      "defaultValue": "https://{yourfortinetDomain}",
      "type": "string",
      "metadata": {
        "description": "enter the Fortinet endpoint (ex: https://{yourfortinetDomain})"
      }
    },
    "Secret Identifier of Keyvalut": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "Enter secret identifier of Key Vault."
      }
    },
    "Fortinet_ResponseOnIP_playbook": {
      "defaultValue": "Fortinet-FortiGate-ResponseOnIP",
      "type": "string",
      "metadata": {
        "description": "PlayBook Name"
      }
    },
    "Fortinet_ResponseOnUrl_playbook": {
      "defaultValue": "Fortinet_ResponseOnUrl_playbook",
      "type": "string",
      "metadata": {
        "description": "PlayBook Name"
      }
    },
    "Fortinet_EnrichIP_playbook": {
      "defaultValue": "Fortinet_EnrichIP_playbook",
      "type": "string",
      "metadata": {
        "description": "PlayBook Name"
      }
    },
    "Teams GroupId": {
      "defaultValue": "TeamgroupId",
      "type": "string",
      "metadata": {
        "description": "GroupId of the Team channel"
      }
    },
    "Teams ChannelId": {
      "defaultValue": "TeamChannelId",
      "type": "string",
      "metadata": {
        "description": "Team ChannelId"
      }
    },
    "Sentinel IP Block Group": {
      "defaultValue": "AddressGroup",
      "type": "string",
      "metadata": {
        "description": "Sentinel IP Block Group"
      }
    },
    "Sentinel URL Block Group": {
      "defaultValue": "AddressGroup",
      "type": "string",
      "metadata": {
        "description": "Sentinel URL Block Group"
      }
    },
    "User Identifier Name": {
      "defaultValue": "fortinetuseridentity",
      "type": "String",
      "metadata": {
        "description": "User Identifier"
      }
    }
  },
  "variables": {
    "UserIdentifier": "[parameters('User Identifier Name')]"
  },
  "resources": [
    {
      "name": "Fortinet_Customconnector_Uri",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2018-05-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[parameters('Fortinet_Customconnector_Uri')]"
        },
        "parameters": {
          "service_EndPoint": {
            "value": "[parameters('Service_EndPoint')]"
          }
        }
      }
    },
    {
      "name": "Fortinet_FunctionApp_URI",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2018-05-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[parameters('Fortinet_FunctionApp_URI')]"
        },
        "parameters": {
          "Secret Identifier of Keyvalut": {
            "Value": "[parameters('Secret Identifier of Keyvalut')]"
          },
          "EndPointURL": {
            "Value": "[parameters('Service_EndPoint')]"
          },
          "UserIdentifier": {
            "Value": "[variables('UserIdentifier')]"
          }
        }
      }
    },
    {
      "name": "Fortinet-TakeIPActionFromTeams_Uri",
      "dependsOn": [
        "[resourceId('Microsoft.Resources/deployments', 'Fortinet_FunctionApp_URI')]",
        "[resourceId('Microsoft.Resources/deployments', 'Fortinet_Customconnector_Uri')]"
      ],
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2018-05-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[parameters('Fortinet-ResponseOnIPUri')]"
        },
        "parameters": {
          "Playbook Name": {
            "Value": "[parameters('Fortinet_ResponseOnIP_playbook')]"
          },
          "Teams GroupId": {
            "Value": "[parameters('Teams GroupId')]"
          },
          "Teams ChannelId": {
            "Value": "[parameters('Teams ChannelId')]"
          },
          "Address group": {
            "Value": "[parameters('Sentinel IP Block Group')]"
          },
          "User Identifier Name": {
            "Value": "[variables('UserIdentifier')]"
          }
        }
      }
    },
    {
      "name": "Fortinet-TakeURLActionFromTeams_Uri",
      "dependsOn": [
        "[resourceId('Microsoft.Resources/deployments', 'Fortinet_FunctionApp_URI')]",
        "[resourceId('Microsoft.Resources/deployments', 'Fortinet_Customconnector_Uri')]"
      ],
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2018-05-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[parameters('Fortinet-ResponseOnURLUri')]"
        },
        "parameters": {
          "playbook Name": {
            "Value": "[parameters('Fortinet_ResponseOnUrl_playbook')]"
          },
          "Teams GroupId": {
            "Value": "[parameters('Teams GroupId')]"

          },
          "Teams ChannelId": {
            "Value": "[parameters('Teams ChannelId')]"
          },
          "Address Group": {
            "Value": "[parameters('Sentinel URL Block Group')]"
          },
          "User Identifier Name": {
            "Value": "[variables('UserIdentifier')]"
          }
        }
      }
    },
    {
      "name": "Fortinet-EnrichonIPUri",
      "dependsOn": [
        "[resourceId('Microsoft.Resources/deployments', 'Fortinet_FunctionApp_URI')]",
        "[resourceId('Microsoft.Resources/deployments', 'Fortinet_Customconnector_Uri')]"
      ],
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2018-05-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[parameters('Fortinet-EnrichonIPUri')]"
        },
        "parameters": {
          "playbook Name": {
            "Value": "[parameters('Fortinet_EnrichIP_playbook')]"
          },
          "Address Group": {
            "Value": "[parameters('Sentinel URL Block Group')]"
          },
          "User Identifier Name": {
            "Value": "[variables('UserIdentifier')]"
          }
        }
      }
    }
  ]
} 

