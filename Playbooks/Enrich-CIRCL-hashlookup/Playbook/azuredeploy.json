{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "resourceTags": {
            "type": "object",
            "defaultValue": {
                "LogicAppsCategory": "security"
            }
        },
        "PlaybookName": {
            "defaultValue": "Enrich-CIRCL-hashlookup",
            "type": "string"
        },
        "workflows_Enrich_CIRCL_hashlookup_name": {
            "defaultValue": "Enrich-CIRCL-hashlookup",
            "type": "String"
        },
        "customApis_CIRCL_hashlookup_name": {
            "defaultValue": "CIRCL-hashlookup",
            "type": "String"
        },
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]",
            "metadata": {
                "description": "Location for all resources."
            }
        }
    },
    "variables": {
        "AzureSentinelConnectionName": "[concat('azuresentinel-', parameters('PlaybookName'))]",
        "customApisConnectionName": "[concat('customApis-', parameters('PlaybookName'))]"
    },
    "resources": [
        {
            "type": "Microsoft.Web/connections",
            "apiVersion": "2016-06-01",
            "name": "[variables('AzureSentinelConnectionName')]",
            "location": "[parameters('location')]",
            "tags": "[parameters('resourceTags')]",
            "properties": {
                "customParameterValues": {},
                "parameterValueType": "Alternative",
                "api": {
                    "id": "[concat('/subscriptions/', subscription().subscriptionId, '/providers/Microsoft.Web/locations/', parameters('location'), '/managedApis/azuresentinel')]"
                }
            }
        },
        {
            "type": "Microsoft.Web/connections",
            "apiVersion": "2016-06-01",
            "name": "[variables('customApisConnectionName')]",
            "location": "[parameters('location')]",
            "tags": "[parameters('resourceTags')]",
            "properties": {
                "customParameterValues": {},
                "api": {
                    "id": "[concat('/subscriptions/', subscription().subscriptionId, '/resourceGroups/', resourceGroup().name, '/providers/Microsoft.Web/customApis/', parameters('customApis_CIRCL_hashlookup_name'))]"
                }
            }
        },
        {
            "type": "Microsoft.Logic/workflows",
            "apiVersion": "2019-05-01",
            "name": "[parameters('workflows_Enrich_CIRCL_hashlookup_name')]",
            "location": "[parameters('location')]",
            "tags": "[parameters('resourceTags')]",
            "identity": {
                "type": "SystemAssigned"
            },
            "dependsOn": [
                "[resourceId('Microsoft.Web/connections', variables('AzureSentinelConnectionName'))]",
                "[resourceId('Microsoft.Web/connections', variables('customApisConnectionName'))]"
            ],
            "properties": {
                "state": "Enabled",
                "definition": {
                    "$schema": "https://schema.management.azure.com/providers/Microsoft.Logic/schemas/2016-06-01/workflowdefinition.json#",
                    "contentVersion": "1.0.0.0",
                    "parameters": {
                        "$connections": {
                            "defaultValue": {},
                            "type": "Object"
                        }
                    },
                    "triggers": {
                        "When_Azure_Sentinel_incident_creation_rule_was_triggered": {
                            "type": "ApiConnectionWebhook",
                            "inputs": {
                                "body": {
                                    "callback_url": "@{listCallbackUrl()}"
                                },
                                "host": {
                                    "connection": {
                                        "name": "@parameters('$connections')['azuresentinel']['connectionId']"
                                    }
                                },
                                "path": "/incident-creation"
                            }
                        }
                    },
                    "actions": {
                        "Bulk_search_of_SHA-1_hashes": {
                            "runAfter": {
                                "For_each_sha1": [
                                    "Succeeded"
                                ]
                            },
                            "type": "ApiConnection",
                            "inputs": {
                                "body": {
                                    "hashes": "@{variables('sha1_hashes')}"
                                },
                                "headers": {
                                    "Content-Type": "application/json"
                                },
                                "host": {
                                    "connection": {
                                        "name": "@parameters('$connections')['CIRCL-hashlookup']['connectionId']"
                                    }
                                },
                                "method": "post",
                                "path": "/bulk/sha1"
                            }
                        },
                        "Condition_-_Check_for_FileHash_Entity": {
                            "actions": {
                                "Bulk_search_of_MD5_hashes": {
                                    "runAfter": {
                                        "For_each_md5": [
                                            "Succeeded"
                                        ]
                                    },
                                    "type": "ApiConnection",
                                    "inputs": {
                                        "body": {
                                            "hashes": "@{variables('md5_hashes')}"
                                        },
                                        "headers": {
                                            "Content-Type": "application/json"
                                        },
                                        "host": {
                                            "connection": {
                                                "name": "@parameters('$connections')['CIRCL-hashlookup']['connectionId']"
                                            }
                                        },
                                        "method": "post",
                                        "path": "/bulk/md5"
                                    }
                                },
                                "Condition_if_md5_bulk_search_non-empty_output": {
                                    "actions": {
                                        "Append_MD5_output_to_string_variable_comment": {
                                            "runAfter": {},
                                            "type": "AppendToStringVariable",
                                            "inputs": {
                                                "name": "comment",
                                                "value": "MD5\n@{body('Bulk_search_of_MD5_hashes')}\n"
                                            }
                                        },
                                        "Set_variable": {
                                            "runAfter": {
                                                "Append_MD5_output_to_string_variable_comment": [
                                                    "Succeeded"
                                                ]
                                            },
                                            "type": "SetVariable",
                                            "inputs": {
                                                "name": "hash_match",
                                                "value": "@bool(true)"
                                            }
                                        }
                                    },
                                    "runAfter": {
                                        "Bulk_search_of_MD5_hashes": [
                                            "Succeeded"
                                        ]
                                    },
                                    "expression": {
                                        "and": [
                                            {
                                                "not": {
                                                    "equals": [
                                                        "@string(body('Bulk_search_of_MD5_hashes'))",
                                                        "[[]"
                                                    ]
                                                }
                                            }
                                        ]
                                    },
                                    "type": "If"
                                },
                                "Filter_array_md5": {
                                    "runAfter": {},
                                    "type": "Query",
                                    "inputs": {
                                        "from": "@body('Entities_-_Get_FileHashes')?['Filehashes']",
                                        "where": "@equals(item()?['Algorithm'], 'MD5')"
                                    }
                                },
                                "For_each_md5": {
                                    "foreach": "@body('Filter_array_md5')",
                                    "actions": {
                                        "Append_to_array_variable": {
                                            "runAfter": {},
                                            "type": "AppendToArrayVariable",
                                            "inputs": {
                                                "name": "md5_hashes",
                                                "value": "@items('For_each_md5')?['Value']"
                                            }
                                        }
                                    },
                                    "runAfter": {
                                        "Filter_array_md5": [
                                            "Succeeded"
                                        ]
                                    },
                                    "type": "Foreach"
                                }
                            },
                            "runAfter": {
                                "Initialize_variable_sha1_hashes": [
                                    "Succeeded"
                                ]
                            },
                            "expression": {
                                "and": [
                                    {
                                        "greater": [
                                            "@length(body('Entities_-_Get_FileHashes')?['Filehashes'])",
                                            0
                                        ]
                                    }
                                ]
                            },
                            "type": "If"
                        },
                        "Condition_-_No_entities": {
                            "actions": {
                                "Terminate": {
                                    "runAfter": {},
                                    "type": "Terminate",
                                    "inputs": {
                                        "runStatus": "Cancelled"
                                    }
                                }
                            },
                            "runAfter": {
                                "Entities_-_Get_FileHashes": [
                                    "Succeeded"
                                ]
                            },
                            "expression": {
                                "and": [
                                    {
                                        "equals": [
                                            "@length(body('Entities_-_Get_FileHashes')?['Filehashes'])",
                                            0
                                        ]
                                    }
                                ]
                            },
                            "type": "If"
                        },
                        "Condition_if_hash_match": {
                            "actions": {
                                "Add_comment_to_incident_(V3)_3": {
                                    "runAfter": {},
                                    "type": "ApiConnection",
                                    "inputs": {
                                        "body": {
                                            "incidentArmId": "@triggerBody()?['object']?['id']",
                                            "message": "<p><span style=\"font-size: 14px\"><strong>CIRCL hashlookup enrichment playbook run results:</strong></span><br>\n@{variables('comment')}</p>"
                                        },
                                        "host": {
                                            "connection": {
                                                "name": "@parameters('$connections')['azuresentinel']['connectionId']"
                                            }
                                        },
                                        "method": "post",
                                        "path": "/Incidents/Comment"
                                    }
                                }
                            },
                            "runAfter": {
                                "Condition_-_Check_for_FileHash_Entity": [
                                    "Succeeded"
                                ],
                                "Condition_if_sha1_bulk_search_non-empty_output": [
                                    "Succeeded"
                                ]
                            },
                            "else": {
                                "actions": {
                                    "Update_incident": {
                                        "runAfter": {},
                                        "type": "ApiConnection",
                                        "inputs": {
                                            "body": {
                                                "incidentArmId": "@triggerBody()?['object']?['id']",
                                                "tagsToAdd": {
                                                    "TagsToAdd": [
                                                        {
                                                            "Tag": "NoThreatIntelFound-CIRCL-hashlookup"
                                                        }
                                                    ]
                                                }
                                            },
                                            "host": {
                                                "connection": {
                                                    "name": "@parameters('$connections')['azuresentinel']['connectionId']"
                                                }
                                            },
                                            "method": "put",
                                            "path": "/Incidents"
                                        }
                                    }
                                }
                            },
                            "expression": {
                                "and": [
                                    {
                                        "equals": [
                                            "@variables('hash_match')",
                                            "@bool(true)"
                                        ]
                                    }
                                ]
                            },
                            "type": "If"
                        },
                        "Condition_if_sha1_bulk_search_non-empty_output": {
                            "actions": {
                                "Append_SHA-1_output_to_string_variable_comment": {
                                    "runAfter": {},
                                    "type": "AppendToStringVariable",
                                    "inputs": {
                                        "name": "comment",
                                        "value": "SHA1\n@{body('Bulk_search_of_SHA-1_hashes')}\n"
                                    }
                                },
                                "Set_variable_hash_match": {
                                    "runAfter": {
                                        "Append_SHA-1_output_to_string_variable_comment": [
                                            "Succeeded"
                                        ]
                                    },
                                    "type": "SetVariable",
                                    "inputs": {
                                        "name": "hash_match",
                                        "value": "@bool(true)"
                                    }
                                }
                            },
                            "runAfter": {
                                "Bulk_search_of_SHA-1_hashes": [
                                    "Succeeded"
                                ]
                            },
                            "expression": {
                                "and": [
                                    {
                                        "not": {
                                            "equals": [
                                                "@string(body('Bulk_search_of_SHA-1_hashes'))",
                                                "[[]"
                                            ]
                                        }
                                    }
                                ]
                            },
                            "type": "If"
                        },
                        "Entities_-_Get_FileHashes": {
                            "runAfter": {},
                            "type": "ApiConnection",
                            "inputs": {
                                "body": "@triggerBody()?['object']?['properties']?['relatedEntities']",
                                "host": {
                                    "connection": {
                                        "name": "@parameters('$connections')['azuresentinel']['connectionId']"
                                    }
                                },
                                "method": "post",
                                "path": "/entities/filehash"
                            }
                        },
                        "Filter_array_sha1": {
                            "runAfter": {
                                "Initialize_variable_sha1_hashes": [
                                    "Succeeded"
                                ]
                            },
                            "type": "Query",
                            "inputs": {
                                "from": "@body('Entities_-_Get_FileHashes')?['Filehashes']",
                                "where": "@equals(item()?['Algorithm'], 'SHA1')"
                            }
                        },
                        "For_each_sha1": {
                            "foreach": "@body('Filter_array_sha1')",
                            "actions": {
                                "Append_to_array_variable_2": {
                                    "runAfter": {},
                                    "type": "AppendToArrayVariable",
                                    "inputs": {
                                        "name": "sha1_hashes",
                                        "value": "@items('For_each_sha1')?['Value']"
                                    }
                                }
                            },
                            "runAfter": {
                                "Filter_array_sha1": [
                                    "Succeeded"
                                ]
                            },
                            "type": "Foreach"
                        },
                        "Initialize_variable_comment": {
                            "runAfter": {
                                "Condition_-_No_entities": [
                                    "Succeeded"
                                ]
                            },
                            "type": "InitializeVariable",
                            "inputs": {
                                "variables": [
                                    {
                                        "name": "comment",
                                        "type": "string"
                                    }
                                ]
                            }
                        },
                        "Initialize_variable_hash_match": {
                            "runAfter": {
                                "Initialize_variable_comment": [
                                    "Succeeded"
                                ]
                            },
                            "type": "InitializeVariable",
                            "inputs": {
                                "variables": [
                                    {
                                        "name": "hash_match",
                                        "type": "boolean",
                                        "value": "@bool(false)"
                                    }
                                ]
                            }
                        },
                        "Initialize_variable_md5_hashes": {
                            "runAfter": {
                                "Initialize_variable_hash_match": [
                                    "Succeeded"
                                ]
                            },
                            "type": "InitializeVariable",
                            "inputs": {
                                "variables": [
                                    {
                                        "name": "md5_hashes",
                                        "type": "array",
                                        "value": []
                                    }
                                ]
                            }
                        },
                        "Initialize_variable_sha1_hashes": {
                            "runAfter": {
                                "Initialize_variable_md5_hashes": [
                                    "Succeeded"
                                ]
                            },
                            "type": "InitializeVariable",
                            "inputs": {
                                "variables": [
                                    {
                                        "name": "sha1_hashes",
                                        "type": "array",
                                        "value": []
                                    }
                                ]
                            }
                        }
                    },
                    "outputs": {}
                },
                "parameters": {
                    "$connections": {
                        "value": {
                            "CIRCL-hashlookup": {
                                "connectionId": "[resourceId('Microsoft.Web/connections', variables('customApisConnectionName'))]",
                                "connectionName": "[variables('customApisConnectionName')]",
                                "id": "[concat('/subscriptions/', subscription().subscriptionId, '/resourceGroups/', resourceGroup().name, '/providers/Microsoft.Web/customApis/', parameters('customApis_CIRCL_hashlookup_name'))]"
                            },
                            "azuresentinel": {
                                "connectionId": "[resourceId('Microsoft.Web/connections', variables('AzureSentinelConnectionName'))]",
                                "connectionName": "[variables('AzureSentinelConnectionName')]",
                                "id": "[concat('/subscriptions/', subscription().subscriptionId, '/providers/Microsoft.Web/locations/', parameters('location'), '/managedApis/azuresentinel')]",
                                "connectionProperties": {
                                    "authentication": {
                                        "type": "ManagedServiceIdentity"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    ]
}
