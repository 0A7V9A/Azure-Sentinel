{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "metadata": {
        "title": "Enrich Dynatrace Application Security Problem Incident",
        "description": "This playbook will enriche Dynatrace Application Security Problem Incidents with additional information when new incident is opened.",
        "prerequisites": ["1. Dynatrace tenant (ex. xyz.dynatrace.com)",
             "2. Dynatrace Access Token."],
        "lastUpdateTime": "2022-10-19T00:00:00.000Z",
        "entities": [],
        "tags": [ "Security Problem" ],
        "support": {
            "tier": "community"
        },
        "author": {
            "name": "Gareth Emslie"
        },
        "releaseNotes": [
            {
                "version": "1.0.0",
                "title": "Enrich Dynatrace Application Security Problem Incident",
                "notes": [
                    "Initial version"
                ]
            }
        ]
    },
    "parameters": {
        "PlaybookName": {
            "defaultValue": "EnrichDynatraceApplicationSecurityProblemIncident",
            "type": "string",
            "metadata": {
                "description": "Incident trigger"
            }
        },
        "LogAnalyticsWorkspaceName": {
            "defaultValue": "<Enter Log Analytics Workspace name>",
            "type": "string",
            "metadata": {
                "description": "Log Analytics Workspace Name"
            }
        },
        "DynatraceEnvironmentUrl": {
            "defaultValue": "<Dynatrace environment url>",
            "type": "string",
            "metadata": {
                "description": "Dynatrace tenant (ex. xyz.dynatrace.com)"
            }
        },
        "DynatraceApiToken": {
            "defaultValue": "",
            "type": "securestring",
            "metadata": {
                "description": "Dynatrace Api Token"
            }
        }
    },
    "variables": {
        "AzureSentinelConnectionName": "[concat('azuresentinel-', parameters('PlaybookName'))]",
        "automationRuleName": "[concat('automation-', parameters('PlaybookName'))]",
        "alertRules": [
            "[resourceId('Microsoft.OperationalInsights/workspaces/providers/alertRules', parameters('LogAnalyticsWorkspaceName'), 'Microsoft.SecurityInsights', '305093b4-0fa2-57bc-bced-caea782a6e9c')]",
            "[resourceId('Microsoft.OperationalInsights/workspaces/providers/alertRules', parameters('LogAnalyticsWorkspaceName'), 'Microsoft.SecurityInsights', 'af99b078-124b-543a-9a50-66ef87c09f6a')]"
        ]
    },
    "resources": [
        {
            "type": "Microsoft.Web/connections",
            "apiVersion": "2016-06-01",
            "name": "[variables('AzureSentinelConnectionName')]",
            "location": "[resourceGroup().location]",
            "properties": {
                "displayName": "[variables('AzureSentinelConnectionName')]",
                "customParameterValues": {},
                "parameterValueType": "Alternative",
                "api": {
                    "id": "[concat('/subscriptions/', subscription().subscriptionId, '/providers/Microsoft.Web/locations/', resourceGroup().location, '/managedApis/azuresentinel')]"
                }
            }
        },
        {
            "type": "Microsoft.Logic/workflows",
            "apiVersion": "2017-07-01",
            "name": "[parameters('PlaybookName')]",
            "location": "[resourceGroup().location]",
            "tags": {
                "hidden-SentinelTemplateName": "EnrichDynatraceApplicationSecurityProblem-Incident",
                "hidden-SentinelTemplateVersion": "1.0"
            },
            "identity": {
                "type": "SystemAssigned"
            },
            "dependsOn": [
                "[resourceId('Microsoft.Web/connections', variables('AzureSentinelConnectionName'))]"
            ],
            "properties": {
                "state": "Enabled",
                "definition": {
                    "$schema": "https://schema.management.azure.com/providers/Microsoft.Logic/schemas/2016-06-01/workflowdefinition.json#",
                    "contentVersion": "1.0.0.0",
                    "parameters": {
                        "$connections": {
                            "defaultValue": {},
                            "type": "Object"
                        },
                        "ApiToken": {
                            "defaultValue": "",
                            "type": "SecureString"
                        },
                        "EnvironmentUrl": {
                            "defaultValue": "",
                            "type": "String"
                        }
                    },
                    "triggers": {
                        "Microsoft_Sentinel_incident": {
                            "type": "ApiConnectionWebhook",
                            "inputs": {
                                "body": {
                                    "callback_url": "@{listCallbackUrl()}"
                                },
                                "host": {
                                    "connection": {
                                        "name": "@parameters('$connections')['azuresentinel']['connectionId']"
                                    }
                                },
                                "path": "/incident-creation"
                            }
                        }
                    },
                    "actions": {
                        "For_each_management_zone": {
                            "foreach": "@body('Parse_Dynatrace_Security_Problem_JSON')?['managementZones']",
                            "actions": {
                                "Append_management_zone_tag": {
                                    "runAfter": {},
                                    "type": "AppendToArrayVariable",
                                    "inputs": {
                                        "name": "tags",
                                        "value": "ManagementZone : @{items('For_each_management_zone')['name']}"
                                    }
                                }
                            },
                            "runAfter": {
                                "Initialize_incident_tag_array": [
                                    "Succeeded"
                                ]
                            },
                            "type": "Foreach"
                        },
                        "Get_Dynatrace_Security_Problem_Details": {
                            "runAfter": {
                                "Parse_Incident_Alert_Custom_Body_JSON": [
                                    "Succeeded"
                                ]
                            },
                            "type": "Http",
                            "inputs": {
                                "headers": {
                                    "Authorization": "Api-Token @{parameters('ApiToken')}"
                                },
                                "method": "GET",
                                "queries": {
                                    "fields": "+riskAssessment,+description,+events,+vulnerableComponents,+affectedEntities,+exposedEntities,+reachableDataAssets,+relatedContainerImages,+managementZones,+relatedEntities"
                                },
                                "uri": "@{parameters('EnvironmentUrl')}/api/v2/securityProblems/@{first(body('Parse_Incident_Alert_Custom_Body_JSON')?['securityProblemId'])}"
                            }
                        },
                        "Initialize_incident_tag_array": {
                            "runAfter": {
                                "Parse_Dynatrace_Security_Problem_JSON": [
                                    "Succeeded"
                                ]
                            },
                            "type": "InitializeVariable",
                            "inputs": {
                                "variables": [
                                    {
                                        "name": "tags",
                                        "type": "array"
                                    }
                                ]
                            }
                        },
                        "Parse_Dynatrace_Security_Problem_JSON": {
                            "runAfter": {
                                "Get_Dynatrace_Security_Problem_Details": [
                                    "Succeeded"
                                ]
                            },
                            "type": "ParseJson",
                            "inputs": {
                                "content": "@body('Get_Dynatrace_Security_Problem_Details')",
                                "schema": {
                                    "properties": {
                                        "affectedEntities": {
                                            "items": {
                                                "type": "string"
                                            },
                                            "type": "array"
                                        },
                                        "cveIds": {
                                            "items": {
                                                "type": "string"
                                            },
                                            "type": "array"
                                        },
                                        "description": {
                                            "type": "string"
                                        },
                                        "displayId": {
                                            "type": "string"
                                        },
                                        "events": {
                                            "items": {
                                                "properties": {
                                                    "muteState": {
                                                        "properties": {
                                                            "comment": {
                                                                "type": "string"
                                                            },
                                                            "reason": {
                                                                "type": "string"
                                                            },
                                                            "user": {
                                                                "type": "string"
                                                            }
                                                        },
                                                        "type": "object"
                                                    },
                                                    "reason": {
                                                        "type": "string"
                                                    },
                                                    "riskAssessmentSnapshot": {
                                                        "properties": {
                                                            "exposure": {
                                                                "type": "string"
                                                            },
                                                            "numberOfAffectedEntities": {
                                                                "type": "integer"
                                                            },
                                                            "numberOfReachableDataAssets": {
                                                                "type": "integer"
                                                            },
                                                            "publicExploit": {
                                                                "type": "string"
                                                            },
                                                            "vulnerableFunctionUsage": {
                                                                "type": "string"
                                                            }
                                                        },
                                                        "type": "object"
                                                    },
                                                    "timestamp": {
                                                        "type": "integer"
                                                    }
                                                },
                                                "required": [
                                                    "timestamp",
                                                    "reason",
                                                    "riskAssessmentSnapshot"
                                                ],
                                                "type": "object"
                                            },
                                            "type": "array"
                                        },
                                        "exposedEntities": {
                                            "type": "array"
                                        },
                                        "externalVulnerabilityId": {
                                            "type": "string"
                                        },
                                        "firstSeenTimestamp": {
                                            "type": "integer"
                                        },
                                        "lastUpdatedTimestamp": {
                                            "type": "integer"
                                        },
                                        "managementZones": {
                                            "type": "array"
                                        },
                                        "muteStateChangeInProgress": {
                                            "type": "boolean"
                                        },
                                        "muted": {
                                            "type": "boolean"
                                        },
                                        "packageName": {
                                            "type": "string"
                                        },
                                        "reachableDataAssets": {
                                            "type": "array"
                                        },
                                        "relatedContainerImages": {
                                            "properties": {
                                                "containerImages": {
                                                    "type": "array"
                                                }
                                            },
                                            "type": "object"
                                        },
                                        "relatedEntities": {
                                            "properties": {
                                                "applications": {
                                                    "type": "array"
                                                },
                                                "databases": {
                                                    "type": "array"
                                                },
                                                "hosts": {
                                                    "items": {
                                                        "properties": {
                                                            "affectedEntities": {
                                                                "items": {
                                                                    "type": "string"
                                                                },
                                                                "type": "array"
                                                            },
                                                            "id": {
                                                                "type": "string"
                                                            },
                                                            "numberOfAffectedEntities": {
                                                                "type": "integer"
                                                            }
                                                        },
                                                        "required": [
                                                            "id",
                                                            "numberOfAffectedEntities",
                                                            "affectedEntities"
                                                        ],
                                                        "type": "object"
                                                    },
                                                    "type": "array"
                                                },
                                                "kubernetesClusters": {
                                                    "type": "array"
                                                },
                                                "kubernetesWorkloads": {
                                                    "type": "array"
                                                },
                                                "services": {
                                                    "type": "array"
                                                }
                                            },
                                            "type": "object"
                                        },
                                        "riskAssessment": {
                                            "properties": {
                                                "baseRiskLevel": {
                                                    "type": "string"
                                                },
                                                "baseRiskScore": {
                                                    "type": "number"
                                                },
                                                "baseRiskVector": {
                                                    "type": "string"
                                                },
                                                "dataAssets": {
                                                    "type": "string"
                                                },
                                                "exposure": {
                                                    "type": "string"
                                                },
                                                "publicExploit": {
                                                    "type": "string"
                                                },
                                                "riskLevel": {
                                                    "type": "string"
                                                },
                                                "riskScore": {
                                                    "type": "number"
                                                },
                                                "riskVector": {
                                                    "type": "string"
                                                },
                                                "vulnerableFunctionUsage": {
                                                    "type": "string"
                                                }
                                            },
                                            "type": "object"
                                        },
                                        "securityProblemId": {
                                            "type": "string"
                                        },
                                        "status": {
                                            "type": "string"
                                        },
                                        "technology": {
                                            "type": "string"
                                        },
                                        "title": {
                                            "type": "string"
                                        },
                                        "url": {
                                            "type": "string"
                                        },
                                        "vulnerabilityType": {
                                            "type": "string"
                                        },
                                        "vulnerableComponents": {
                                            "items": {
                                                "properties": {
                                                    "affectedEntities": {
                                                        "items": {
                                                            "type": "string"
                                                        },
                                                        "type": "array"
                                                    },
                                                    "displayName": {
                                                        "type": "string"
                                                    },
                                                    "id": {
                                                        "type": "string"
                                                    },
                                                    "numberOfAffectedEntities": {
                                                        "type": "integer"
                                                    }
                                                },
                                                "required": [
                                                    "id",
                                                    "displayName",
                                                    "numberOfAffectedEntities",
                                                    "affectedEntities"
                                                ],
                                                "type": "object"
                                            },
                                            "type": "array"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        },
                        "Parse_Incident_Alert_Custom_Body_JSON": {
                            "runAfter": {},
                            "type": "ParseJson",
                            "inputs": {
                                "content": "@triggerBody()?['object']?['properties']?['Alerts'][0]['properties']['additionalData']['Custom Details']",
                                "schema": {
                                    "properties": {
                                        "packageName": {
                                            "items": {
                                                "type": "string"
                                            },
                                            "type": "array"
                                        },
                                        "riskLevel": {
                                            "items": {
                                                "type": "string"
                                            },
                                            "type": "array"
                                        },
                                        "securityProblemId": {
                                            "items": {
                                                "type": "string"
                                            },
                                            "type": "array"
                                        },
                                        "securityProblemUrl": {
                                            "items": {
                                                "type": "string"
                                            },
                                            "type": "array"
                                        },
                                        "technology": {
                                            "items": {
                                                "type": "string"
                                            },
                                            "type": "array"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        },
                        "Update_Microsoft_Sentinel_Incident": {
                            "runAfter": {
                                "For_each_management_zone": [
                                    "Succeeded"
                                ]
                            },
                            "type": "ApiConnection",
                            "inputs": {
                                "body": {
                                    "description": "@body('Parse_Dynatrace_Security_Problem_JSON')?['description']",
                                    "incidentArmId": "@triggerBody()?['object']?['id']",
                                    "tagsToAdd": {
                                        "TagsToAdd": "@variables('tags')"
                                    }
                                },
                                "host": {
                                    "connection": {
                                        "name": "@parameters('$connections')['azuresentinel']['connectionId']"
                                    }
                                },
                                "method": "put",
                                "path": "/Incidents"
                            }
                        }
                    },
                    "outputs": {}
                },
                "parameters": {
                    "$connections": {
                        "value": {
                            "azuresentinel": {
                                "connectionId": "[resourceId('Microsoft.Web/connections', variables('AzureSentinelConnectionName'))]",
                                "connectionName": "[variables('AzureSentinelConnectionName')]",
                                "id": "[concat('/subscriptions/', subscription().subscriptionId, '/providers/Microsoft.Web/locations/', resourceGroup().location, '/managedApis/azuresentinel')]",
                                "connectionProperties": {
                                    "authentication": {
                                        "type": "ManagedServiceIdentity"
                                    }
                                }
                            }
                        }
                    },
                    "ApiToken": {
                        "value": "[parameters('DynatraceApiToken')]"
                    },
                    "EnvironmentUrl": {
                        "value": "[parameters('DynatraceEnvironmentUrl')]"
                    }
                }
            }
        },
        {
            "type": "Microsoft.SecurityInsights/automationRules",
            "apiVersion": "2021-10-01",
            "name": "[variables('automationRuleName')]",
            "dependsOn": [
                "[resourceId('Microsoft.Logic/workflows', parameters('PlaybookName'))]"
            ],
            "properties": {
                "displayName": "Enrich Dynatrace Application Security Problem Incident",
                "order": 3,
                "triggeringLogic": {
                    "isEnabled": true,
                    "expirationTimeUtc": null,
                    "triggersOn": "Incidents",
                    "triggersWhen": "Created",
                    "conditions": [
                        {
                            "conditionType": "Property",
                            "conditionProperties": {
                                "propertyName": "IncidentRelatedAnalyticRuleIds",
                                "operator": "Contains",
                                "propertyValues": "[variables('alertRules')]"
                            }
                        }
                    ]
                },
                "actions": [
                    {
                        "order": 1,
                        "actionType": "RunPlaybook",
                        "actionConfiguration": {
                            "logicAppResourceId": "[resourceId('Microsoft.Logic/workflows', parameters('PlaybookName'))]",
                            "tenantId": "[tenant().tenantId]"
                        }
                    }
                ]
            },
            "scope": "[format('Microsoft.OperationalInsights/workspaces/{0}', parameters('LogAnalyticsWorkspaceName'))]"
        }
    ]
}