                                        "timestamp": {
                                            "type": "integer"
                                        },
                                        "vulnerability": {
                                            "properties": {
                                                "codeLocation": {
                                                    "properties": {
                                                        "className": {
                                                            "type": "string"
                                                        },
                                                        "displayName": {
                                                            "type": "string"
                                                        },
                                                        "functionName": {
                                                            "type": "string"
