                                                            "type": "string"
                                                        },
                                                        "displayName": {
                                                            "type": "string"
                                                        },
                                                        "functionName": {
                                                            "type": "string"
                                                        },
                                                        "parameterTypes": {
                                                            "properties": {
                                                                "truncationInfo": {
                                                                    "properties": {
