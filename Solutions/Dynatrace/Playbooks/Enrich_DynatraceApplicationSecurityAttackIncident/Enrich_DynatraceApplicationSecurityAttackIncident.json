                                    "inputs": {
                                        "name": "tags",
                                        "value": "ManagementZone : @{items('For_each_Entity_Management_Zone')['name']}"
                                    }
                                }
                            },
                            "runAfter": {
                                "For_each_Entity_tag": [
                                    "Succeeded"
                                ]
                            },
                            "type": "Foreach"
                        },
                        "For_each_Entity_tag": {
                            "foreach": "@body('Parse_Dynatrace_ProcessGroup_Entity')?['tags']",
