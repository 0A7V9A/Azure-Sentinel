                            "runAfter": {
                                "Get_Dynatrace_Attack_Details": [
                                    "Succeeded"
                                ]
                            },
                            "type": "ParseJson",
                            "inputs": {
                                "content": "@body('Get_Dynatrace_Attack_Details')",
                                "schema": {
                                    "properties": {
                                        "affectedEntities": {
                                            "properties": {
                                                "processGroup": {
                                                    "properties": {
