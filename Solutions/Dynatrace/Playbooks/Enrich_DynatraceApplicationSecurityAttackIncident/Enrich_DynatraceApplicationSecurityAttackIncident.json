                            "inputs": {
                                "headers": {
                                    "Authorization": "Api-Token @{parameters('ApiToken')}"
                                },
                                "method": "GET",
                                "uri": "@{parameters('EnvironmentUrl')}/api/v2/attacks/@{first(body('Parse_Incident_Alert_Custom_Body_JSON')?['attackId'])}"
                            }
                        },
                        "Get_Dynatrace_ProcessGroup_Entity": {
                            "runAfter": {
                                "Initialize_tag_array": [
                                    "Succeeded"
                                ]
                            },
                            "type": "Http",
                            "inputs": {
                                "headers": {
                                    "Authorization": "Api-Token @{parameters('ApiToken')}"
                                },
                                "method": "GET",
                                "uri": "@{parameters('EnvironmentUrl')}/api/v2/entities/@{body('Parse_Dynatrace_Attack_JSON')?['affectedEntities']?['processGroupInstance']?['id']}"
                            }
                        },
                        "Initialize_tag_array": {
                            "runAfter": {
                                "Parse_Dynatrace_Attack_JSON": [
                                    "Succeeded"
                                ]
                            },
                            "type": "InitializeVariable",
                            "inputs": {
                                "variables": [
                                    {
                                        "name": "tags",
                                        "type": "array",
                                        "value": [
