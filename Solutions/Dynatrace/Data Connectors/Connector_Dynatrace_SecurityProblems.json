{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "logAnalyticsWorkspaceName": {
            "defaultValue": "<Enter Log Analytics Workspace name>",
            "type": "string",
            "metadata": {
                "description": "Workspace name for Log Analytics where Sentinel is setup"
            }
        },
        "connectorResourceName": {
            "type": "string",
            "defaultValue": "[newGuid()]",
            "metadata": {
                "description": "Resource name for connector"
            }
        }
    },
    "functions": [],
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.OperationalInsights/workspaces/providers/dataConnectors",
            "apiVersion": "2021-09-01-preview",
            "name": "[concat(parameters('logAnalyticsWorkspaceName'),'/Microsoft.SecurityInsights/',parameters('connectorResourceName'))]",
            "location": "[resourceGroup().location]",
            "kind": "APIPolling",
            "properties": {
                "connectorUiConfig": {
                    "id" : "DynatraceSecurityProblems",
                    "title": "Dynatrace Security Problem Connector",
                    "publisher": "Dynatrace",
                    "descriptionMarkdown": "Detect Security Problems in your environment with the Dynatrace Security Problem Connector",
                    "graphQueriesTableName": "DynatraceSecurityProblems_CL",
                    "graphQueries": [
                        {
                            "metricName": "Total data received",
                            "legend": "Dynatrace Security Problems Events",
                            "baseQuery": "{{graphQueriesTableName}}"
                        }
                    ],
                    "sampleQueries": [
                        {
                            "description": "All Security Problem Events",
                            "query": "{{graphQueriesTableName}}\n| summarize  arg_max(lastUpdatedTimestamp_d, *) by securityProblemId_s\n|  take 10"
                        },
                        {
                            "description": "All Third-Party Security Problem Events",
                            "query": "{{graphQueriesTableName}}\n| where vulnerabilityType_s == \"THIRD_PARTY\"\n| summarize  arg_max(lastUpdatedTimestamp_d, *) by securityProblemId_s\n|  take 10"
                        },
                        {
                            "description": "All Code-level Security Problem Events",
                            "query": "{{graphQueriesTableName}}\n| where vulnerabilityType_s == \"CODE_LEVEL\"\n| summarize  arg_max(lastUpdatedTimestamp_d, *) by securityProblemId_s\n|  take 10"
                        },
                        {
                            "description": "All Runtime Security Problem Events",
                            "query": "{{graphQueriesTableName}}\n| where vulnerabilityType_s == \"RUNTIME\"\n| summarize  arg_max(lastUpdatedTimestamp_d, *) by securityProblemId_s\n|  take 10"
                        },
                        {
                            "description": "Critical Security Problem Events",
                            "query": "{{graphQueriesTableName}}\n| where riskAssessment_riskLevel_s == \"CRITICAL\"\n| summarize  arg_max(lastUpdatedTimestamp_d, *) by securityProblemId_s\n| take 10"
                        },
                        {
                            "description": "High Security Problem Events",
                            "query": "{{graphQueriesTableName}}\n| where riskAssessment_riskLevel_s == \"HIGH\"\n| summarize  arg_max(lastUpdatedTimestamp_d, *) by securityProblemId_s\n| take 10"
                        },
                        {
                            "description": "Count Security Problem Events by Technology and Vulnerability",
                            "query": "{{graphQueriesTableName}}\n| summarize  arg_max(lastUpdatedTimestamp_d, *) by securityProblemId_s\n| summarize count() by technology_s, externalVulnerabilityId_s\n| take 10"
                        }
                    ],
                    "dataTypes": [
                        {
                            "name": "{{graphQueriesTableName}}",
                            "lastDataReceivedQuery": "{{graphQueriesTableName}}\n            | summarize Time = max(TimeGenerated)\n            | where isnotempty(Time)"
                        }
                    ],
                    "connectivityCriteria": [
                        {
                            "type": "SentinelKindsV2",
                            "value": [
                                "APIPolling"
                            ]
                        }
                    ],
                    "availability": {
                        "status": 1,
                        "isPreview": true
                    },
                    "permissions": {
                        "resourceProvider": [
                            {
                                "provider": "Microsoft.OperationalInsights/workspaces",
                                "permissionsDisplayText": "read and write permissions are required.",
                                "providerDisplayName": "Workspace",
                                "scope": "Workspace",
                                "requiredPermissions": {
                                    "write": true,
                                    "read": true,
                                    "delete": true
                                }
                            }
                        ],
                        "customs": [
                            {
                                "name": "Dynatrace Access Token",
                                "description": "You need a Dynatrace Access Token, the token should have ***Read security problems*** (securityProblems.read) scope."
                            }
                        ]
                    },
                    "instructionSteps": [
                        {
                            "title": "Dynatrace Security Problems Events to Azure Sentinel",
                            "description": "Configure and Enable Dynatrace [Application Security](https://www.dynatrace.com/support/help/how-to-use-dynatrace/application-security). \n Follow [these instructions](https://www.dynatrace.com/support/help/get-started/access-tokens#create-api-token) to generate an access token.",
                            "instructions": [
                                {
                                    "parameters": {
                                        "enable": "true",
                                        "userRequestPlaceHoldersInput": [
                                            {
                                                "displayText": "Dynatrace Environment Url",
                                                "requestObjectKey": "apiEndpoint",
                                                "placeHolderName": "{{dynatraceEnvironmentUrl}}"
                                            }
                                        ]
                                    },
                                    "type": "APIKey"
                                }
                            ]
                        }
                    ]
                },
                "pollingConfig": {
                    "auth": {
                        "authType": "APIKey",
                        "APIKeyIdentifier": "Api-Token",
                        "APIKeyName": "Authorization"
                    },
                    "request": {
                        "apiEndpoint": "https://{{dynatraceEnvironmentUrl}}/api/v2/securityProblems",
                        "httpMethod": "Get",
                        "rateLimitQPS": 2,
                        "retryCount": 3,
                        "timeoutInSeconds": 120,
                        "queryTimeFormat": "yyyy-MM-ddTHH:mm:ssZ",
                        "queryWindowInMin": 5,
                        "startTimeAttributeName": "from",
                        "endTimeAttributeName": "to",
                        "headers": {
                            "Accept": "application/json"
                        },
                        "queryParameters": {
                            "fields": "+riskAssessment"
                        }
                    },
                    "paging": {
                        "pagingType": "PageToken",
                        "nextPageTokenJsonPath": "$.nextPageKey",
                        "nextPageParaName": "nextPageKey",
                        "pageSizeParaName": "pageSize",
                        "pageSize": 10
                    },
                    "response": {
                        "eventsJsonPaths": [
                            "$.securityProblems"
                        ],
                        "convertChildPropertiesToArray": true
                    }
                }
            }
        }
    ],
    "outputs": {}
}