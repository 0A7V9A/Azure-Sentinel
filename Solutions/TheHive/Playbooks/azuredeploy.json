{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters":{
        "API Hostname": {
         "type":"String",
         "defaultValue":"testhost.com",
         "metadata":{
            "description":"Hostname of the TheHive instance."
         }
        },
        "API Port":{
         "type":"String",
         "defaultValue":"9000",
         "metadata":{
            "description":"Port number of TheHive API. By default 9060."
         }
        },
        "TheHive-CreateAlert": {
            "defaultValue": "TheHive-CreateAlert",
            "type": "string",
            "metadata": {
                "description": "Create Alert"
            }
        },
        "TheHive-CreateCase": {
            "defaultValue": "TheHive-CreateCase",
            "type": "string",
            "metadata": {
                "description": "Create Case"
            }
        },
        "TheHive-LockUser": {
            "defaultValue": "TheHive-LockUser",
            "type": "string",
            "metadata": {
                "description": "Lock User"
            }
        }
    },
    "variables": {},
    "resources": [
        {
            "name": "TheHive_LinkedTemplate",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2018-05-01",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "https://raw.githubusercontent.com/socprime/Azure-Sentinel/base-playbooks-solution/Solutions/BasePlaybooksSolution/Playbooks/TheHive/azuredeploy.json"
                },
                "parameters": {
                    "API Hostname": {
                        "Value": "[parameters('API Hostname')]"
                    },
                    "API Port": {
                        "Value": "[parameters('API Port')]"
                    }
            }
        },
        {
            "name": "VendorProduct-playbookname_LinkedTemplate",
            "dependsOn": [
                "[resourceId('Microsoft.Resources/deployments', 'VendorProductAPIConnector_LinkedTemplate')]"
            ],
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2018-05-01",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "https://raw.githubusercontent.com/socprime/Azure-Sentinel/base-playbooks-solution/Solutions/BasePlaybooksSolution/Playbooks/Playbooks/VendorProduct-playbookname/azuredeploy.json"
                },
                "parameters": {
                    "PlaybookName": {
                        "Value": "[parameters('VendorProduct-playbookname_Playbook_Name')]"
                    }
                }
            }
        }
    ]
}